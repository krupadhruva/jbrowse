<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>JBrowse2</title>
</head>

<link rel="preconnect" href="https://rsms.me/">
<link rel="stylesheet" href="https://rsms.me/inter/inter.css">

<style>
    /* CSS */
    root {
        font-family: Inter, sans-serif;
        font-feature-settings: 'liga' 1, 'calt' 1; /* fix for Chrome */
    }

    @supports (font-variation-settings: normal) {
        :root {
            font-family: InterVariable, sans-serif;
        }
    }

    /* Split the screen in half */
    .split {
        height: 100%;
        width: 50%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: hidden;
    }

    /* Control the left side */
    .left {
        left: 0;
    }

    /* Control the right side */
    .right {
        right: 0;
    }
</style>

<html lang="en">
<body>

<div class="split left">
    <div class="centered">
        {% if test_data %}
            <h2>Test data</h2>
            <ol type="1">
                {% for data in test_data %}
                    <li>
                        <a href={{ base_uri }}/?config={{ data.path }}/config.json>{{ data.name }}</a>
                    </li>
                {% endfor %}
            </ol>
        {% endif %}
    </div>
</div>

<div class="split right">
    <div class="centered">
        {% if user_data %}
            <h2>{{ storage }} user data</h2>
            <ol type="1">
                {% for data in user_data %}
                    <li>
                        <a href={{ base_uri }}/?config={{ data.path }}/config.json>{{ data.name }}</a>
                    </li>
                {% endfor %}
            </ol>
        {% endif %}
    </div>
</div>

</body>
</html>
